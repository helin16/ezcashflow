<com:TContent ID="MainContent">
	<com:Application.controls.select2.select2 />
	<com:Application.controls.bootstrapDateTimePicker.bootstrapDateTimePicker />
	<com:TCallback ID="getTransactionsBtn" onCallback="Page.getTransactions" />
	<div class="container" >
		<div id="search-wrapper" class="panel panel-default search-panel">
			<div class="panel-heading">
				<label style="margin: 0px; padding: 0"> Show Search Criteria?
					<input type="checkbox" checked onclick="$(this).up('.panel').down('.panel-body').toggle();"/>
				</label>
				<span id="search-btn" class="btn btn-primary pull-right btn-xs" data-loading-text="<span class='fa fa-spinner fa-spin'></span>">
					<span class="glyphicon glyphicon-search"></span>
					<span class="hidden-xs hidden-sm"> Search</span>
				</span>
			</div>
			<div class="panel-body">
				<div class="col-sm-4">
					<div class="form-group">
						<label>Accounts:</label>
						<input search-panel="accounts" class="form-control input-sm" placeholder="AccountEntry"/>
					</div>
				</div>
				<div class="col-sm-4">
					<div class="form-group">
						<label>Dates:</label>
						<div class="input-group">
							<div class="date input-append datepicker">
								<input class="form-control input-sm date-input" search-panel="logDate.from" placeholder="from:"/>
								<span class="input-group-addon add-on" style="display: none;">
									<i data-time-icon='glyphicon glyphicon-time' data-date-icon='glyphicon glyphicon-calendar'></i>
								</span>
							</div>
							  <span class="input-group-btn" style="width:0px;"></span>
							<div class="date input-append datepicker">
								<input class="form-control input-sm date-input" search-panel="logDate.to" placeholder="to:"/>
								<span class="input-group-addon add-on" style="display: none;">
									<i data-time-icon='glyphicon glyphicon-time' data-date-icon='glyphicon glyphicon-calendar'></i>
								</span>
							</div>
						</div
					</div>
				</div>
			</div>
		</div>
		<div class="panel panel-default" style="display: none;">
			<div class="panel-heading">
				Found <strong id="item-count">0</strong> Transactions:
			</div>
			<div id="result-wrapper"></div>
		</div>
	</div>
</table>
</com:TContent>